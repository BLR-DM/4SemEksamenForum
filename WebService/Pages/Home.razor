@page "/"
@inject UserSessionService Session


@if (!_sessionIsLoaded)
{
    <div class="profile-card">
        <div class="info">
            <h3>Loading...</h3>
           
        </div>
        <div class="details">
            <div><strong>Username:</strong></div>
            <div><strong>Email:</strong></div>
            <div><strong>Points:</strong></div>
            <div><strong>UserId:</strong></div>
        </div>
    </div>
}
else
{
    <div class="profile-card">
        <div class="info">
            <h3>@Session.Name</h3>
            <h6>@Session.Email</h6>
        </div>
        <div class="details">
            <div><strong>Username:</strong><span>@Session.Username</span></div>
            <div><strong>Email:</strong><span>@Session.Email</span></div>
            <div><strong>Points:</strong><span>@Session.Points</span></div>
            <div><strong>UserId:</strong><span>@Session.UserId</span></div>
        </div>
    </div>

    <div class="mt-3"></div> @*Testing*@
    @if (Session.Notifications is not null && Session.Notifications.Count > 0) 
    {
        var testNotification = Session.Notifications.First();

        <div class="content-wrapper"> @*Testing*@
            <div class="notification-list">
                <div class="content-wrapper">
                    <div>(For test display)</div>
                    <div><strong>Id:</strong><span>@testNotification.Id</span></div>
                    <div><strong>UserId:</strong><span>@testNotification.UserId</span></div>
                    <div><strong>Message:</strong><span>@testNotification.Message</span></div>
                    <div><strong>IsRead:</strong><span>@testNotification.IsRead</span></div>
                    <div><strong>CreatedAt:</strong><span>@testNotification.CreatedAt</span></div>
                </div>
                <div class="mt-3"></div>

                <div>Notifications:</div>
                @foreach (var notification in Session.Notifications)
                {
                    <ShortNotificationComponent Notification="notification"></ShortNotificationComponent>
                }


                @*var test = Session.Notifications.First();
                <div>
                    <div><strong>@test.Id</strong></div>
                    <div><strong>@test.UserId</strong></div>
                    <div><strong>@test.Message</strong></div>
                    <div><strong>@test.IsRead</strong></div>
                    <div><strong>@test.CreatedAt</strong></div>
                </div>*@
            </div>
        </div>
    }

    <form>
        <textarea>@Session.Token</textarea>
    </form>

}


@code {
    private bool _sessionIsLoaded = false;

    protected override async Task OnInitializedAsync()
    {
        await Session.WaitUntilReadyAsync();
        _sessionIsLoaded = true;
    }

}

<style>
    .profile-card {
        background: white;
        border-radius: 10px;
        padding: 30px;
        max-width: 600px;
        margin: 0 auto;
        margin-top: 40px;
        box-shadow: 3px 3px 10px 0px rgba(150, 150, 150, 0.5);
        font-family: Arial, sans-serif;
    }

    .info{
        margin-bottom: 25px;
        text-align: center;
    }

    .info h3{
        font-size: 28px;
        margin-bottom: 4px;
    }

    .info h6{
        font-size: 16px;
        color: #666;
        margin: 0;
    }

    .details{
        width: 100%;
    }

    .details div {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        border-top: 1px solid #eee;
        padding-top: 15px;
    }
</style>
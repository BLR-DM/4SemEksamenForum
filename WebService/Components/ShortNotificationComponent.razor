@if (Notification is not null)
{
    <div class="notification-wrapper">
        <div><strong>Message:</strong><span>@Notification.Message</span></div>
        <div><strong>CreatedAt:</strong><span>@Notification.CreatedAt</span></div>
        
        @if (!Notification.NotificationRead)
        {
            <div class="notification-indicator"></div>
        }
    </div>
}

@code {
    [Parameter]
    public NotificationView? Notification { get; set; }
}

<style>
    .notification-wrapper {
        position: relative;
        padding: 16px;
        margin-bottom: 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        background-color: white;
    }

    .notification-indicator {
        position: absolute;
        top: 50%;
        right: 20px;
        transform: translateY(-50%);
        width: 5px;
        height: 25px;
        background-color: #007fff;
        border-radius: 0%;
    }
</style>